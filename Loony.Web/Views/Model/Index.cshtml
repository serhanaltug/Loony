@{
    ViewData["Title"] = await Component.StaticText("Models");
}

<!-- BEGIN: Subheader -->
<div class="m-subheader ">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="m-subheader__title m-subheader__title--separator">@await Component.StaticText("Models")</h3>
            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                <li class="m-nav__item m-nav__item--home">
                    <a asp-controller="Home" asp-action="Index" class="m-nav__link m-nav__link--icon">
                        <i class="m-nav__link-icon la la-home"></i>
                    </a>
                </li>
            </ul>
        </div>
        <div>
            @if (Convert.ToBoolean(Context.Items["Create"]))
            {
                <a asp-action="New" class="btn btn-info"><i class="la la-plus"></i> @await Component.StaticText("NewModel")</a>
            }
            </div>
    </div>
</div>
<!-- END: Subheader -->

<div class="m-content">
    <div class="row">
        <div class="col-md-12">
            <div class="m-portlet">
                <div class="m-portlet__body">

                    <!--begin: Search Form -->
                    <form id="filterForm" method="post">
                        <div class="m-form m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                            <div class="row align-items-center">
                                <div class="col-xl-8 order-2 order-xl-1">
                                    <div class="form-group m-form__group row align-items-center">
                                        <div class="col-md-1">
                                            <a id="changeView" href="javascript:;" class="btn btn-secondary btn-icon">
                                                <i class="la la-reorder"></i>
                                            </a>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="m-form__group m-form__group--inline">
                                                <div class="m-form__label">
                                                    <label>@await Component.StaticText("ModelGroup"):</label>
                                                </div>
                                                <div class="m-form__control">
                                                    <select asp-items="@ViewBag.ModelGroups" class="form-control kt-selectpicker" name="filter[]" id="ModelGroupId" onchange="submitForm()">
                                                        <option value="">@await Component.StaticText("All")</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="d-md-none m--margin-bottom-10"></div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="m-form__group m-form__group--inline">
                                                <div class="m-form__label">
                                                    <label class="m-label m-label--single">@await Component.StaticText("Season"):</label>
                                                </div>
                                                <div class="m-form__control">
                                                    <select class="form-control kt-selectpicker" name="filter[]" id="Season" onchange="submitForm()">
                                                        <option value="">@await Component.StaticText("All")</option>
                                                        <option value="SS">SS - Spring/Summer</option>
                                                        <option value="FW">FW - Fall/Winter</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="d-md-none m--margin-bottom-10"></div>
                                        </div>
                                        <div class="col-md-3">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 order-1 order-xl-2 m--align-right">
                                    <div class="m-input-icon m-input-icon--left">
                                        <input type="text" class="form-control m-input m-input--solid" name="searchBy" placeholder="@await Component.StaticText("Search")" id="searchBy">
                                        <span class="m-input-icon__icon m-input-icon__icon--left">
                                            <span><i class="la la-search"></i></span>
                                        </span>
                                    </div>
                                    <div class="m-separator m-separator--dashed d-xl-none"></div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!--end: Search Form -->

                    <div id="gridView"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles{
    <link href="/lib/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />

    <style>
        .m--img-rounded {
            height: 40px;
            width: 40px
        }
    </style>
}

@section Scripts{
    <script src="/js/getdata.js" type="text/javascript"></script>
    <script src="/js/changeview.js" type="text/javascript"></script>
}