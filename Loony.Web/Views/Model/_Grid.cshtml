@model ListViewModel<Loony.Data.Entities.Product.Model>
        
@{
    var sortDir = Model.Page.SortDirection;
    var sortOrder = Model.Page.Order;
    var filter = Model.Page.Filter;
    var search = Model.Page.Search;
 }

    <div class="col-12">
        <div class="row recent-work">
            @foreach (var productmodel in Model.Data)
            {
            <div class="col-md-3 col-sm-6 col-xs-12 margin-bottom-20" style="display: block; opacity: 1; ">
                <div class="recent-work-item">
                    @if (Convert.ToBoolean(Context.Items["Update"]))
                    {
                        <a asp-action="Edit" asp-route-id="@productmodel.Id">
                            <img id="@productmodel.Id" class="img-responsive" src="~/Home/Image?id=@productmodel.Id&table=Product.Model" style="max-width:100%; border-style:solid; border-color:lightgray; border-width:1px;">
                        </a>
                    }
                    else
                    {
                        <img id="@productmodel.Id" class="img-responsive" src="~/Home/Image?id=@productmodel.Id&table=Product.Model" style="max-width:100%; border-style:solid; border-color:lightgray; border-width:1px;">
                    }
                    <br />
                    <a asp-action="Edit" asp-route-id="@productmodel.Id" class="recent-work-description" style="height:6em;">
                        @productmodel.ModelCode.ToString().PadLeft(4, '0') - @productmodel.ModelName
                    </a>
                </div>
            </div>
            }
        </div>
    </div>

<div page-data="@Model.Page"></div>
