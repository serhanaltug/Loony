@{
    ViewData["Title"] = await Component.StaticText("Menu");
}

<!-- BEGIN: Subheader -->
<div class="m-subheader ">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="m-subheader__title m-subheader__title--separator">@await Component.StaticText("Menu")</h3>
            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                <li class="m-nav__item m-nav__item--home">
                    <a asp-controller="Home" asp-action="Index" class="m-nav__link m-nav__link--icon">
                        <i class="m-nav__link-icon la la-home"></i>
                    </a>
                </li>
            </ul>
        </div>
        <div>
            @if (Convert.ToBoolean(Context.Items["Create"]))
            {
                <a href="#" class="btn btn-info btnNew"><i class="la la-plus"></i> @await Component.StaticText("NewMenu")</a>
            }
        </div>
    </div>
</div>
<!-- END: Subheader -->

<div class="m-content">
    <div class="row">
        <div class="col-md-12">
            <div class="m-portlet">
                <div class="m-portlet__body">

                    <!--begin: Search Form -->
                    <form id="filterForm" method="post">
                        <div class="m-form m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                            <div class="row align-items-center">
                                <div class="col-xl-12 order-2 order-xl-1">
                                    <div class="form-group m-form__group row align-items-center">
                                        <div class="col-md-3">
                                            <select class="dropdown form-control kt-selectpicker" name="filter[]" id="AdminMenu" onchange="submitForm()">
                                                <option value="false">@await Component.StaticText("MainMenu")</option>
                                                <option value="true">@await Component.StaticText("AdminMenu")</option>
                                            </select>
                                        </div>
                                        <div class="col-md-5"></div>
                                        <div class="col-md-4 m--align-right">
                                            <div class="m-input-icon m-input-icon--left">
                                                <input type="text" class="form-control m-input m-input--solid" name="searchBy" placeholder="@await Component.StaticText("Search")" id="searchBy">
                                                <span class="m-input-icon__icon m-input-icon__icon--left">
                                                    <span><i class="la la-search"></i></span>
                                                </span>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="m-separator m-separator--dashed d-xl-none"></div>
                            </div>
                        </div>
                    </form>
                    <!--end: Search Form -->

                    <div id="gridView"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles{
    <link href="/lib/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
    <style>
        .m--bg-brand {
            background-color: #fff !important;
        }
    </style>
}

@section Scripts{
    <script src="/js/getdata.js" type="text/javascript"></script>
    <script src="/js/crud.js" type="text/javascript"></script>
}