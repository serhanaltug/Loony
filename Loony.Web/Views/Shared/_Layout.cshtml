<!DOCTYPE html>
<!-- Template Name: Metronic - Responsive Admin Dashboard Template build with Twitter Bootstrap 4 -->
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - @Loony.Tools.Settings.readFromConfigFile("ProductName")</title>
    <meta name="description" content="@Loony.Tools.Settings.readFromConfigFile("ProductDescription")">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="~/lib/webfont/1.6.16/webfont.js"></script>
    <!--begin::Base Styles -->
    <link href="~/lib/base-vendor/vendors.bundle.css" rel="stylesheet" type="text/css" />
    <!--end::Base Styles -->
    <!--begin::Global Theme Styles -->
    <link href="~/lib/base/style.bundle.min.css" rel="stylesheet" type="text/css" />
    <!--end::Global Theme Styles -->

    @RenderSection("Styles", required: false)
    <link rel="shortcut icon" href="~/img/logos/favicon.ico" />
</head>
<body class="m-page--wide m-header--fixed m-header--fixed-mobile m-footer--push m-aside--offcanvas-default">
    <!-- begin:: Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page">
        <!-- begin::Header -->
        <header class="m-grid__item m-header" data-minimize="minimize" data-minimize-offset="200" data-minimize-mobile-offset="200">
            <div class="m-header__top">
                <div class="m-container m-container--responsive m-container--xxl m-container--full-height m-page__container">
                    <div class="m-stack m-stack--ver m-stack--desktop">
                        <!-- begin::Brand -->
                        <partial name="Partial/Brand" />
                        <!-- end::Brand -->
                        <!-- begin::Topbar -->
                        <partial name="Partial/TopBar" />
                        <!-- end::Topbar -->
                    </div>
                </div>
            </div>
            <div class="m-header__bottom">
                <div class="m-container m-container--responsive m-container--xxl m-container--full-height m-page__container">
                    <div class="m-stack m-stack--ver m-stack--desktop">
                        <!-- begin::Horizontal Menu -->
                        <partial name="Partial/Menu" />
                        <!-- end::Horizontal Menu -->
                        <!--begin::Search-->
                        <!--end::Search-->
                    </div>
                </div>
            </div>
        </header>
        <!-- end::Header -->
        <!-- begin::Body -->
        <div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor-desktop m-grid--desktop m-body">
            <div class="m-grid__item m-grid__item--fluid  m-grid m-grid--ver	m-container m-container--responsive m-container--xxl m-page__container">
                <div class="m-grid__item m-grid__item--fluid m-wrapper">
                    @RenderBody()
                </div>
            </div>
        </div>
        <!-- end::Body -->
        <!-- begin::Footer -->
        <footer class="m-grid__item m-footer ">
            <div class="m-container m-container--responsive m-container--xxl m-container--full-height m-page__container">
                <div class="m-footer__wrapper">
                    <div class="m-stack m-stack--flex-tablet-and-mobile m-stack--ver m-stack--desktop">
                        <div class="m-stack__item m-stack__item--left m-stack__item--middle m-stack__item--last">
                            <span class="m-footer__copyright">
                                2020 @((DateTime.Today.Year > 2020) ? " - " + DateTime.Today.Year : "") &copy; <a href="@Loony.Tools.Settings.readFromConfigFile("CompanyLink")" class="m-link" target="_blank">@Loony.Tools.Settings.readFromConfigFile("CompanyName")</a>
                            </span>
                        </div>
                        <div class="m-stack__item m-stack__item--right m-stack__item--middle m-stack__item--first">
                            <ul class="m-footer__nav m-nav m-nav--inline m--pull-right">
                                <li class="m-nav__item">
                                    <a href="#" class="m-nav__link">
                                        <span class="m-nav__link-text">@await Component.StaticText("About")</span>
                                    </a>
                                </li>
                                <li class="m-nav__item">
                                    <a href="#" class="m-nav__link">
                                        <span class="m-nav__link-text">@await Component.StaticText("Privacy")</span>
                                    </a>
                                </li>
                                <li class="m-nav__item m-nav__item--last">
                                    <a href="#" class="m-nav__link" data-toggle="m-tooltip" title="Support Center" data-placement="left">
                                        <i class="m-nav__link-icon flaticon-info m--icon-font-size-lg3"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- end::Footer -->
    </div>
    <!-- end:: Page -->
    <!-- begin::Quick Sidebar -->
    <partial name="Partial/QuickSidebar" />
    <!-- end::Quick Sidebar -->
    <!-- begin::Scroll Top -->
    <div id="m_scroll_top" class="m-scroll-top"><i class="la la-arrow-up"></i></div>
    <!-- end::Scroll Top -->

    <script src="~/lib/base-vendor/vendors.bundle.js" type="text/javascript"></script>
    <script src="~/lib/base/scripts.bundle.js" type="text/javascript"></script>

    @RenderSection("Scripts", required: false)
</body>
<!-- end::Body -->
</html>