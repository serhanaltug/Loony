@{
    ViewData["Title"] = await Component.StaticText("Translations");
}

<!-- BEGIN: Subheader -->
<div class="m-subheader ">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="m-subheader__title m-subheader__title--separator">@await Component.StaticText("Translations")</h3>
            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                <li class="m-nav__item m-nav__item--home">
                    <a asp-controller="Home" asp-action="Index" class="m-nav__link m-nav__link--icon">
                        <i class="m-nav__link-icon la la-home"></i>
                    </a>
                </li>
            </ul>
        </div>
        <div>
            @if (Convert.ToBoolean(Context.Items["Create"]))
            {
                <a href="#" class="btn btn-info btnNew"><i class="la la-plus"></i> @await Component.StaticText("NewTranslation")</a>
            }
            @if (Convert.ToBoolean(Context.Items["Update"]))
            {
                <a asp-action="Import" class="btn btn-metal"><i class="la la-upload"></i> @await Component.StaticText("ImportFile")</a>
                <a asp-action="Export" class="btn btn-metal"><i class="la la-download"></i> @await Component.StaticText("ExportToExcel")</a>
            }
            </div>
    </div>
</div>
<!-- END: Subheader -->

<div class="m-content">
    <div class="row">
        <div class="col-md-12">
            <div class="m-portlet">
                <div class="m-portlet__body">

                    <!--begin: Search Form -->
                    <form id="filterForm" method="post">
                        <div class="m-form m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                            <div class="row align-items-center">
                                <div class="col-xl-8 order-2 order-xl-1">
                                    <div class="form-group m-form__group row align-items-center">
                                        <div class="col-md-4">
                                            <div class="m-form__group m-form__group--inline">
                                                <div class="m-form__label">
                                                    <label>@await Component.StaticText("langType"):</label>
                                                </div>
                                                <div class="m-form__control">
                                                    <select class="dropdown form-control kt-selectpicker" name="filter[]" id="Type" onchange="submitForm()">
                                                        <option value="">@await Component.StaticText("All")</option>
                                                        <option value="1">@await Component.StaticText("Static")</option>
                                                        <option value="2">@await Component.StaticText("Dynamic")</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="d-md-none m--margin-bottom-10"></div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="m-form__group m-form__group--inline">
                                                <div class="m-form__label">
                                                    <label class="m-label m-label--single">@await Component.StaticText("langGroup"):</label>
                                                </div>
                                                <div class="m-form__control">
                                                    <select class="form-control kt-selectpicker" name="filter[]" id="Group" onchange="submitForm()">
                                                        <option value="">@await Component.StaticText("All")</option>
                                                        <option value="Button">@await Component.StaticText("Button")</option>
                                                        <option value="General">@await Component.StaticText("General")</option>
                                                        <option value="Label">@await Component.StaticText("Label")</option>
                                                        <option value="Link">@await Component.StaticText("Link")</option>
                                                        <option value="Menu">@await Component.StaticText("Menu")</option>
                                                        <option value="Message">@await Component.StaticText("Message")</option>
                                                        <option value="Text">@await Component.StaticText("Text")</option>
                                                        <option value="Title">@await Component.StaticText("Title")</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="d-md-none m--margin-bottom-10"></div>
                                        </div>
                                        <div class="col-md-4">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 order-1 order-xl-2 m--align-right">
                                    <div class="m-input-icon m-input-icon--left">
                                        <input type="text" class="form-control m-input m-input--solid" name="searchBy" placeholder="@await Component.StaticText("Search")" id="searchBy">
                                        <span class="m-input-icon__icon m-input-icon__icon--left">
                                            <span><i class="la la-search"></i></span>
                                        </span>
                                    </div>
                                    <div class="m-separator m-separator--dashed d-xl-none"></div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!--end: Search Form -->

                    <div id="gridView"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles{
    <link href="/lib/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
}

@section Scripts{
    <script src="/js/getdata.js" type="text/javascript"></script>
    <script src="/js/crud.js" type="text/javascript"></script>
}